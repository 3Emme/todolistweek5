@{
  Layout = "_Layout";
}

@using ToDoList.Models;

<h1>Items</h1>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
} 

@foreach (Item item in Model)
{
  @if (item.Completed == false)
  {
    <li>@item.DueDate | @Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId }) | Not yet completed</li>
  } 
  else
  {
    <li>@item.DueDate | @Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId }) | Completed</li>
  }
}

<p>@Html.ActionLink("Add new item", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>