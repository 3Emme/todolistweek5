@{
  Layout = "_Layout";
}

@model ToDoList.Models.Item

<h2>Edit</h2>

<h4>Edit this task: @Html.DisplayFor(model => model.Description)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ItemId)

    @Html.LabelFor(model => model.Description)
    @Html.EditorFor(model => model.Description)
    @Html.LabelFor(model => model.DueDate)
    @Html.EditorFor(model => model.DueDate)
    @Html.DropDownList("Completed",new List<SelectListItem>
    {
      new SelectListItem {Text = "Not yet completed", Value = "false"},
      new SelectListItem {Text = "Completed", Value = "true"},
    }, "Select completion status")
    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>